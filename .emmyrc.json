{
  "$schema": "https://raw.githubusercontent.com/EmmyLuaLs/emmylua-analyzer-rust/refs/heads/main/crates/emmylua_code_analysis/resources/schema.json",
  "runtime": {
    "version": "LuaJIT",
    "requirePattern": ["lua/?.lua", "lua/?/init.lua"]
  },
  "workspace": {
    "library": [
      "$VIMRUNTIME",
      "${3rd}/luv/library",
      "${3rd}/busted/library",
      "${3rd}/luassert/library",
      "deps/nvim-test",
      "deps/.data/nvim/site/pack/core/opt/fzf-lua",
      "deps/.data/nvim/site/pack/core/opt/aerial.nvim",
      "deps/.data/nvim/site/pack/core/opt/mini.nvim",
      "deps/.data/nvim/site/pack/core/opt/lazy.nvim",
      "deps/.data/nvim/site/pack/core/opt/gitsigns.nvim",
      "deps/.data/nvim/site/pack/core/opt/store.nvim"
    ],
    "ignoreDir": [".luarocks"]
  },
  "diagnostics": {
    "disable": [
      "unnecessary-if",
      "unnecessary-assert",
      "missing-fields",
      "access-invisible",
      "invert-if"
    ],
    "enables": []
  },
  "strict": {
    "typeCall": true,
    "arrayIndex": true
  }
}
